{
  "extends": [
    "./node_modules/gts/tsconfig-google.json",
    "@tsconfig/svelte/tsconfig.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "node",
      "svelte"
    ],
    "rootDir": ".",
    "outDir": "build",
    "inlineSources": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true
  },
  "include": [
    "src/**/*.ts",
    "srv/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
